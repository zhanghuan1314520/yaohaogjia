.content,.header {
    width: 100%;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
}

.header {
    position: relative;
    padding: 0 40rpx;
    height: 552rpx;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 32px;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 0rpx;
    position: absolute;
}

.header .h-title {
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
    line-height: 28rpx;
    margin-bottom: 12rpx;
}

.header .h-top {
    margin: 34rpx 0 60rpx;
}

.header .h-top ._span {
    font-size: 64rpx;
    font-family: Helvetica;
    color: #fff;
    line-height: 64rpx;
    letter-spacing: 1px;
}

.header .h-bottom {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.header .h-bottom .h-block .price {
    font-size: 36px;
    font-family: Helvetica;
    color: #fff;
    line-height: 36px;
}

.header .h-bottom .h-block .h-title {
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
    line-height: 28rpx;
    margin-bottom: 12rpx;
}

.header .h-bottom ._span {
    font-size: 36rpx;
    font-family: Helvetica;
    color: #fff;
    font-weight: 600;
    line-height: 36rpx;
}

.body {
    width: 100%;
    height: 570rpx;
    background: #fff;
    border-radius: 40rpx;
    position: absolute;
    font-family: PingFangSC-Semibold,PingFang SC;
    top: 484rpx;
    padding: 40rpx 0;
    box-sizing: border-box;
}

.body .qiun-charts {
    padding: 0 22rpx;
}

.pad-time {
    margin-top: 80rpx;
    padding: 0 40rpx;
}

.time-table {
    height: 80rpx;
    display: flex;
    background: #f4f6f8;
    border-radius: 60rpx;
    margin-bottom: 36rpx;
}

.time-table .time-item {
    height: 100%;
    border-radius: 60rpx;
    color: #868e99;
    line-height: 80rpx;
    padding: 0 20rpx;
    margin: 0 20rpx 0 0;
    text-align: center;
    display: inline-block;
}

.time-table .time-item--active {
    background: #2c68ff;
    color: #fff;
}

.time-scroll .time-single {
    width: 214rpx;
    height: auto;
    margin-right: 22rpx;
    display: inline-block;
}

.time-scroll .time-single .time-photo {
    width: 214rpx;
    height: 144rpx;
    border-radius: 4rpx;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: end;
    justify-content: flex-end;
    box-sizing: border-box;
    padding-bottom: 12rpx;
}

.time-scroll .time-single .time-photo .time-photo-title {
    height: 22rpx;
    font-size: 22rpx;
    font-weight: 600;
    color: #fff;
    line-height: 22rpx;
    text-align: center;
}

.time-scroll .time-single .time-host {
    font-weight: 500;
    color: #000;
    line-height: 30rpx;
    height: 30rpx;
    font-size: 30rpx;
    margin: 20rpx 0 16rpx;
}

.time-scroll .time-single .time-price {
    height: 26rpx;
    font-size: 26rpx;
    font-family: Helvetica;
    color: #ff5637;
    line-height: 26rpx;
}