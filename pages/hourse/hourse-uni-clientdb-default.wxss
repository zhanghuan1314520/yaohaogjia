.uni-content,.uni-flex,.uni-flex-column,.uni-flex-row,.uni-footer,.uni-list-box,.uni-media-box {
    display: flex;
}

.uni-flex-row,.uni-footer,.uni-list-box,.uni-media-box {
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    box-sizing: border-box;
}

.uni-content,.uni-flex-column {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.uni-color-gary {
    color: #3b4144;
}

.uni-title {
    margin-bottom: 16rpx;
    font-size: 32rpx;
    font-weight: 700;
}

.uni-title,.uni-title-sub {
    display: flex;
    color: #3b4144;
}

.uni-title-sub {
    font-size: 28rpx;
    font-weight: 500;
}

.uni-note {
    margin-top: 10px;
    color: #999;
    font-size: 24rpx;
}

.uni-list-box {
    -webkit-box-flex: 1;
    flex: 1;
    margin-top: 10px;
}

.uni-thumb {
    flex-shrink: 0;
    margin-right: 20rpx;
    width: 125px;
    height: 75px;
    border-radius: 12rpx;
    overflow: hidden;
    border: 1px solid #f5f5f5;
}

.uni-thumb image {
    width: 100%;
    height: 100%;
}

.uni-media-box {
    border-radius: 12rpx;
    overflow: hidden;
}

.uni-media-box .uni-thumb {
    margin: 0 0 0 4px;
    flex-shrink: 1;
    width: 33%;
    border-radius: 0;
}

.uni-media-box .uni-thumb:first-child {
    margin: 0;
}

.uni-content,.uni-footer {
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.uni-footer {
    margin-top: 24rpx;
}

.uni-footer-text {
    font-size: 24rpx;
    color: #999;
    margin-left: 5px;
}

.uni-tag {
    flex-shrink: 0;
    padding: 0 5px;
    border: 1px solid #c8c7cc;
    margin-right: 10px;
    border-radius: 6rpx;
    background: #f8f8f8;
    color: #333;
    font-size: 24rpx;
}

.uni-link {
    margin-left: 10px;
    color: #333;
    text-decoration: underline;
}

page {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    background-color: #efeff4;
    min-height: 100%;
    height: auto;
}

.tips {
    color: #67c23a;
    font-size: 14px;
    line-height: 40px;
    text-align: center;
    background-color: #f0f9eb;
    height: 0;
    opacity: 0;
    transform: translateY(-100%);
    transition: all .3s;
}

.tips-ani {
    transform: translateY(0);
    height: 40px;
    opacity: 1;
}

.content {
    width: 100%;
    display: flex;
}

.list-picture {
    width: 100%;
    height: 145px;
}

.thumb-image {
    width: 100%;
    height: 100%;
}

.ellipsis {
    display: flex;
    overflow: hidden;
}

.uni-ellipsis-1 {
    white-space: nowrap;
}

.uni-ellipsis-1,.uni-ellipsis-2 {
    overflow: hidden;
    text-overflow: ellipsis;
}

.uni-ellipsis-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}