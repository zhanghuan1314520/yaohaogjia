.bor {
    border-bottom: 2rpx solid #f0f0f0;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.timeline {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.timeline image {
    width: 48rpx;
    height: 48rpx;
}

.timeline .time-line-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 48rpx;
}

.data-house {
    margin-bottom: 32rpx;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.data-house,.data-house .top {
    width: 100%;
    display: flex;
}

.data-house .top {
    height: 100%;
}

.data-house .bottom {
    width: 100%;
    font-size: 28rpx;
    font-weight: 400;
    color: #707680;
    margin: 24rpx 0 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    white-space: normal;
}

.data-house .house-img {
    width: 250rpx;
}

.data-house .house-img .host-photo {
    height: 192rpx;
    width: 245rpx;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: reverse;
    flex-direction: column-reverse;
    border-radius: 8rpx;
}

.data-house .house-img .host-photo .host-describe {
    display: flex;
    height: 36rpx;
    border-radius: 0rpx 8rpx 0rpx 8rpx;
}

.data-house .house-img .host-photo .host-describe .host-status {
    height: 36rpx;
    padding: 0 4rpx;
    background: linear-gradient(321deg,#2b67ff,#619efd);
    border-radius: 0rpx 0rpx 0rpx 8rpx;
    line-height: 36rpx;
    font-weight: 400;
    color: #fff;
    text-align: center;
    display: inline-block;
    font-size: 23rpx;
}

.data-house .house-img .host-photo .host-describe .host-time {
    text-align: center;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #fff;
    background: linear-gradient(321deg,rgba(0,0,0,.2),rgba(0,0,0,.8));
    line-height: 36rpx;
    display: inline-block;
    font-size: 23rpx;
    padding: 0 6rpx;
}

.data-house .house-right {
    width: 100%;
    height: 192rpx;
    padding: 4rpx 24rpx;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.data-house .house-right .house-des {
    width: 400rpx;
    height: 32rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 32rpx;
}

.data-house .house-right .house-price {
    height: 38rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #ff5637;
    line-height: 38rpx;
}

.data-house .house-right .house-addr {
    height: 24rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #868e99;
    line-height: 24rpx;
}

.data-house .house-right .house-tag ._span {
    font-size: 22rpx;
    padding: 0 8rpx;
    line-height: 40rpx;
    height: 40rpx;
    background: #ebf2fc;
    border-radius: 4rpx;
    font-weight: 400;
    color: #868e99;
    margin-right: 16rpx;
}