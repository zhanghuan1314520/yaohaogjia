label,scroll-view,swiper-item,view {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    flex-shrink: 0;
    -webkit-box-flex: 0;
    flex-grow: 0;
    flex-basis: auto;
    -webkit-box-align: stretch;
    align-items: stretch;
    align-content: flex-start;
}

image,input,scroll-view,swiper,swiper-item,text,textarea,video,view {
    position: relative;
    border: 0 solid #000;
    box-sizing: border-box;
}

swiper-item {
    position: absolute;
}

button {
    margin: 0;
}

.body {
    padding: 0 40rpx;
    margin: 0;
}

.body,.search {
    display: flex;
}

.search {
    margin: 20rpx 0 24rpx;
    position: relative;
    -webkit-box-pack: center;
    justify-content: center;
}

.search .icon-search {
    position: absolute;
    left: 8%;
}

.search .search-input {
    width: 670rpx;
    border: 2rpx solid #ccc;
    border-radius: 36rpx;
    height: 72rpx;
    background: #f1f3f5;
    opacity: .8;
    padding: 0 72rpx;
    box-sizing: border-box;
}

.footer {
    width: 100%;
}

.footer .floorSelect {
    width: 100%;
    height: 88rpx;
    background: #fff;
    display: flex;
}

.footer .footer-radio {
    font-size: 32rpx;
    font-weight: 400;
    color: #595f66;
    margin-right: 40rpx;
}

.footer .floor-active {
    height: 38rpx;
    font-size: 38rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 38rpx;
    position: relative;
}

.footer .floor-active::after {
    content: "";
    position: absolute;
    bottom: -24rpx;
    left: 52rpx;
    width: 48rpx;
    height: 8rpx;
    background: #0940ff;
    border-radius: 6rpx;
}

.footer .footer-data {
    height: 400rpx;
}