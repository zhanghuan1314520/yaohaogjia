.content,.header {
    width: 100%;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
}

.header {
    height: 404rpx;
    position: relative;
    padding: 88rpx 40rpx 0;
}

.header .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 0;
    position: absolute;
}

.header .name {
    height: 48rpx;
    font-size: 48rpx;
    font-weight: 600;
    color: #fff;
    line-height: 48rpx;
    margin-bottom: 28rpx;
}

.header .address {
    height: 28rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
    line-height: 28rpx;
}

.body {
    width: 100%;
    height: 570rpx;
    background: #fff;
    border-radius: 40rpx;
    position: absolute;
    font-family: PingFangSC-Semibold,PingFang SC;
    top: 320rpx;
    padding: 40rpx 0;
    box-sizing: border-box;
}

.body .one {
    margin: 0 40rpx 40rpx;
    text-align: center;
}

.body .one .floorName {
    text-align: left;
    font-size: 38rpx;
    font-weight: 600;
    color: #000;
}

.body .floorSelect {
    width: 100%;
    height: 88rpx;
    background: #fff;
    display: flex;
    padding: 0 40rpx;
}

.body .floorSelect .footer-radio {
    font-size: 32rpx;
    font-weight: 400;
    color: #595f66;
    margin-right: 40rpx;
}

.body .floorSelect .floor-active {
    height: 38rpx;
    font-size: 38rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 38rpx;
    position: relative;
}

.body .floorSelect .floor-active::after {
    content: "";
    position: absolute;
    bottom: -24rpx;
    left: 1%;
    width: 48rpx;
    height: 8rpx;
    background: #0940ff;
    border-radius: 6rpx;
}

.body .scroll {
    padding: 0 40rpx;
    margin-top: 40rpx;
}

.body .scroll .scroll-view_block {
    display: flex;
}

.body .scroll .scroll-view_block .block {
    width: 154rpx;
    height: 56rpx;
    background: #f1f3f5;
    border-radius: 32rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 56rpx;
    display: inline-block;
    margin-right: 18rpx;
    text-align: center;
}

.body .scroll .scroll-view_block .block-active {
    background: #eff6ff;
    font-weight: 400;
    color: #2b67ff;
    border: 2rpx solid #2b67ff;
}

.body .cell {
    padding: 0 40rpx;
    margin-top: 32rpx;
}

.body .cell .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    height: 80rpx;
    line-height: 80rpx;
}

.body .cell .gray {
    width: 100%;
    height: 160rpx;
    background: #f5f5f6;
    border-radius: 8rpx;
    padding: 16rpx 32rpx;
    box-sizing: border-box;
}

.body .cell .gray ._p {
    font-size: 24rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 40rpx;
}

.body .cell .gray .gray-in {
    display: flex;
}

.body .cell .gray .gray-in ._span {
    min-width: 100rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 40rpx;
}

.body .cell .color-sgin {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    margin: 16rpx 0;
}

.body .cell .color-sgin .sgin-circle {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.body .cell .color-sgin .sgin-circle .circle {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    margin-right: 12rpx;
}

.body .cell .color-sgin .sgin-circle .c1 {
    background: #000;
}

.body .cell .color-sgin .sgin-circle .c2 {
    background: #2b67ff;
}

.body .cell .color-sgin .sgin-circle .c3 {
    background: #b36f0a;
}

.body .cell .color-sgin .sgin-circle ._span {
    font-size: 24rpx;
    font-weight: 400;
    color: #000;
    line-height: 40rpx;
}

.footer {
    width: 100%;
    height: 124rpx;
    background: #fff;
    box-shadow: 0rpx 2rpx 0rpx 0rpx #f0f0f0;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    border-top: 2rpx solid #ccc;
    font-size: 30rpx;
    color: #fff;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.table t-table t-tr .color-black {
    font-size: 24rpx;
    font-weight: 400;
    color: #2b67ff;
    line-height: 24rpx;
}

.table t-table t-tr .color-blue {
    font-size: 24rpx;
    font-weight: 400;
    color: #000;
    line-height: 24rpx;
}

.table t-table t-tr .color-brownness {
    font-size: 28rpx;
    font-weight: 500;
    color: #b36f0a;
    line-height: 28rpx;
}