.content,.header {
    width: 100%;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
}

.header {
    padding: 88rpx 40rpx 0;
}

.header .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 80rpx;
    height: 80rpx;
    top: 0;
    left: 0rpx;
    position: absolute;
    z-index: 100;
}

.header .title .left image {
    margin-top: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.body {
    margin-top: 32rpx;
}

.body .scroll {
    padding: 0 40rpx;
}

.body .scroll .scroll-view_block {
    display: flex;
}

.body .scroll .scroll-view_block .block {
    height: 56rpx;
    background: #f1f3f5;
    border-radius: 28rpx;
    padding: 8rpx 26rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 56rpx;
    display: inline-block;
    margin-right: 24rpx;
}

.body .scroll .scroll-view_block .block-active {
    background: #2b67ff;
    font-weight: 600;
    color: #fff;
}

.body .body-content {
    box-sizing: border-box;
}

.body .body-content image {
    width: 100%;
}

.body .body-content .title-content {
    width: 100%;
    height: 64rpx;
    background: #fff8e7;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    justify-content: space-around;
}

.body .body-content .title-content ._p {
    font-size: 24rpx;
    font-weight: 400;
    color: #b36f0a;
    line-height: 24rpx;
}

.body .sigin {
    padding: 20rpx;
    margin: auto;
}