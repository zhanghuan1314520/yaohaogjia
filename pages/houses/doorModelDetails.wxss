.doorModelDetails {
    padding-bottom: 20rpx;
}

.doorModelDetails-item {
    text-align: center;
    padding: 20rpx 0;
}

.doorModelDetails-title {
    height: 64rpx;
    line-height: 64rpx;
    padding: 0 12rpx;
    background-color: #fff8e7;
    color: #b36f0a;
    border-radius: 5PX;
}

.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.content,.header {
    width: 100%;
    box-sizing: border-box;
}

.header {
    padding: 0 40rpx;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 80rpx;
    text-align: center;
}

.body {
    margin-top: 32rpx;
}

.body .scroll {
    padding: 0 40rpx;
}

.body .scroll-view_block {
    display: flex;
}

.body .scroll-view_block .block {
    height: 56rpx;
    background: #f1f3f5;
    border-radius: 32rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 56rpx;
    display: inline-block;
    margin-right: 24rpx;
}

.body .scroll-view_block .block-active {
    background: #2b67ff;
    font-weight: 600;
    color: #fff;
}

.body .title-content {
    width: 100%;
    height: 64rpx;
    background: #fff8e7;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    justify-content: space-around;
}

.body .title-content ._p {
    font-size: 24rpx;
    font-weight: 400;
    color: #b36f0a;
    line-height: 24rpx;
}