.t-td {
    padding: 14rpx 0!important;
}

.blue .t-td {
    color: #2b67ff;
}

.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
}

.content,.content .header {
    width: 100%;
}

.content .header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 32px;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.content .header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 40rpx;
    position: absolute;
}

.content .header .img-content {
    text-align: center;
    position: relative;
}

.content .header .img-content .status {
    width: 100%;
    box-sizing: border-box;
    min-height: 586rpx;
}

.content .header .img-content .text-p {
    position: absolute;
    width: 580rpx;
    bottom: 64rpx;
    left: 87rpx;
}

.content .header .img-content .text-p .status-title {
    height: 52rpx;
    font-size: 52rpx;
    font-family: Helvetica;
    color: #c16701;
    line-height: 52rpx;
    margin-bottom: 10rpx;
}

.content .header .img-content .text-p ._span {
    font-size: 32rpx;
    font-weight: 400;
    color: #c16701;
    line-height: 48rpx;
}

.content .header .h-content {
    margin-top: 36rpx;
}

.content .body {
    width: 100%;
    background: #fff;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.content .body .body-title {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.content .body .body-title .pfs_name {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.content .body .body-title image {
    width: 40rpx;
    height: 40rpx;
}

.content .body .body-title ._span {
    font-size: 32rpx;
    font-weight: 500;
    color: #2b67ff;
    margin: 0 10rpx;
}

.footer {
    display: flex;
    width: 100%;
    -webkit-box-pack: justify;
    justify-content: space-between;
    padding: 0 40rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
}

.footer ._span {
    font-size: 24rpx;
    font-weight: 400;
    color: #868e99;
    line-height: 24rpx;
}

.footer .footer-left image {
    width: 136rpx;
    height: 136rpx;
    display: block;
}

.footer .footer-right .house {
    width: 96rpx;
    height: 96rpx;
    display: block;
}

.lotteryResults .table {
    margin: 20rpx 0;
}

.lotteryResults .table .t-table,.lotteryResults .table .t-th {
    border-color: #e0ecff!important;
}

.lotteryResults .table .t-th {
    padding: 26rpx 0;
    line-height: 28rpx;
    background: #f4f8fe;
    font-size: 28rpx;
    font-weight: 400;
    color: #707780;
}

.lotteryResults .table .t-td {
    background: #fff;
    border-color: #e0ecff!important;
}