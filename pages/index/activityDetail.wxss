.content .share-button {
    width: 132rpx;
    height: 132rpx;
    position: fixed;
    right: 20rpx;
    bottom: 250rpx;
    border-radius: 50%;
    transition: all .3s;
    z-index: 99999;
    background: transparent;
}

.content .share-button.hide {
    transform: translateX(90rpx);
}

.content .share-button button {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: transparent;
    border: none;
}

.content .share-button .share-img {
    width: 100%;
    height: 100%;
}

.content .bottom-area {
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 92vw;
    padding: 22rpx 40rpx;
    border-top: 1px solid #f0f0f0;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

.content .bottom-area,.content .bottom-area .left {
    display: flex;
}

.content .bottom-area .left {
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
    -webkit-box-pack: start;
    justify-content: flex-start;
}

.content .bottom-area .left button {
    border: none;
    width: 48rpx;
    height: 80rpx;
}

.content .bottom-area .left button cover-image {
    width: 100%;
    height: 44rpx;
}

.content .bottom-area .left button .label {
    font-size: 20rpx;
    color: #333;
}

.content .bottom-area .right {
    border: none;
    width: 462rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    background: #2b67ff;
    color: #fff;
}

.content .bottom-area .right.disabled {
    background: #d8d8d8;
}