<view class="content">
    <view class="title">填写报名信息</view>
    <view class="form-area">
        <view class="row">
            <view class="label">姓 名：</view>
            <input bindinput="__e" class="input" data-event-opts="{{[ [ 'input',[ [ '__set_model',[ '$0','name','$event',[] ],['form'] ] ] ] ]}}" placeholder="请输入" type="text" value="{{form.name}}"></input>
        </view>
        <view class="row">
            <view class="label">手机号：</view>
            <input bindinput="__e" class="input" data-event-opts="{{[ [ 'input',[ [ '__set_model',[ '$0','tel','$event',[] ],['form'] ] ] ] ]}}" placeholder="请输入" type="number" value="{{form.tel}}"></input>
        </view>
        <view class="row">
            <view class="label">参加人数：</view>
            <input bindinput="__e" class="input" data-event-opts="{{[ [ 'input',[ [ '__set_model',[ '$0','num','$event',[] ],['form'] ] ] ] ]}}" maxlength="{{2}}" placeholder="请输入" type="number" value="{{form.num}}"></input>
        </view>
    </view>
    <view class="btn-area">
        <view bindtap="__e" class="btn btn-primary" data-event-opts="{{[ [ 'tap',[ [ 'toSignup',['$event'] ] ] ] ]}}">提交</view>
    </view>
</view>
