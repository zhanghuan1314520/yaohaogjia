.content .swiper-area {
    padding: 24rpx 0;
}

.content .swiper-area swiper {
    height: 296rpx;
}

.content .swiper-area swiper .swiper-item {
    box-sizing: border-box;
    padding: 0 40rpx;
    height: 296rpx;
}

.content .swiper-area swiper .swiper-item .img-area {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
    overflow: hidden;
}

.content .swiper-area swiper .swiper-item .img-area image {
    width: 100%;
}

.content .total-area {
    background: #f1f3f5;
    height: 64rpx;
    line-height: 64rpx;
    padding: 0 40rpx;
    font-size: 28rpx;
    font-weight: 700;
}

.content .ul {
    padding: 0 40rpx;
}

.content .ul .li {
    padding: 24rpx 0 28rpx;
    border-bottom: 1px solid #ebebeb;
    position: relative;
}

.content .ul .li .up-area {
    display: flex;
}

.content .ul .li .up-area .left {
    width: 224rpx;
    height: 158rpx;
    border-radius: 4rpx;
    overflow: hidden;
    margin-right: 16rpx;
    position: relative;
}

.content .ul .li .up-area .left image {
    width: 100%;
    height: 100%;
}

.content .ul .li .up-area .left .status {
    font-size: 24rpx;
    width: 95rpx;
    height: 35rpx;
    line-height: 35rpx;
    text-align: center;
    position: absolute;
    left: 0;
    bottom: 0;
    background: linear-gradient(321deg,#2b67ff,#619efd);
    border-top-right-radius: 8rpx;
    color: #fff;
}

.content .ul .li .up-area .left .status.finished {
    background: #ccc;
}

.content .ul .li .up-area .right {
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
    padding-top: 14rpx;
}

.content .ul .li .up-area .right .title {
    padding-left: 10rpx;
    line-height: 36rpx;
    font-size: 28rpx;
    font-weight: 700;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-bottom: 12rpx;
}

.content .ul .li .up-area .right .sub-info {
    font-size: 24rpx;
    color: #868e99;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    margin-top: 6rpx;
}

.content .ul .li .up-area .right .sub-info image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 8rpx;
}

.content .ul .li .up-area .right .sub-info .text {
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content .ul .li .down-area {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    margin-top: 23rpx;
    width: 520rpx;
}

.content .ul .li .down-area .tag {
    font-size: 18rpx;
    color: #868e99;
    border: 1px solid #868e99;
    height: 28rpx;
    line-height: 26rpx;
    margin-right: 16rpx;
    padding: 0 10rpx;
}

.content .ul .li .down-area .tag-name {
    -webkit-box-flex: 1;
    flex: 1;
    min-width: 0;
    font-size: 24rpx;
    color: #666;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content .ul .li .down-area .btn {
    width: 128rpx;
    height: 48rpx;
    border-radius: 24rpx;
    border: 1px solid;
    color: #2b67ff;
    text-align: center;
    position: absolute;
    right: 0;
}

.content .ul .li .down-area .btn.disabled {
    color: #ccc;
}

.content .empty {
    padding: 60rpx;
    text-align: center;
    color: #ddd;
}

.content .float-btn {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    box-shadow: 0rpx 16rpx 32rpx 0rpx rgba(0,0,0,.1);
    position: fixed;
    bottom: 258rpx;
    right: 20rpx;
    background: #fff;
    z-index: 9;
}

.content .float-btn,.content .float-btn button {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.content .float-btn button {
    border: none;
    border-radius: 0;
    background: transparent;
    width: 100%;
    height: 100%;
}

.content .float-btn button image {
    width: 48rpx;
    height: 48rpx;
}