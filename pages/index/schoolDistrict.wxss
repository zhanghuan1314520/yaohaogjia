.content {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
}

.content,.search {
    width: 100%;
    display: flex;
}

.search {
    position: relative;
    -webkit-box-pack: center;
    justify-content: center;
}

.body {
    box-sizing: border-box;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.body .area {
    padding: 0 40rpx;
}

.body .title {
    height: 32rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 32rpx;
    margin: 24rpx 0;
}

.body .tag {
    width: 154rpx;
    height: 64rpx;
    border-radius: 32px;
    font-size: 28rpx;
    font-weight: 600;
    color: #595f66;
    background: #f1f3f5;
    line-height: 64rpx;
    text-align: center;
    display: inline-block;
    margin-bottom: 24rpx;
    margin-right: 13rpx;
}

.body .tag-active {
    background: #2b67ff;
    color: #fff;
}

.body .block {
    display: flex;
    flex-wrap: wrap;
}

.body .school-map {
    height: 415rpx;
    background: url(https://cdn.lottery.okgoes.com/map1.png) no-repeat;
    background-size: contain;
    border-radius: 8px;
    margin-bottom: 26rpx;
}

.body .school-map image {
    width: 100%;
    height: 100%;
}

.body .schoolDistrictImage {
    width: 670rpx;
    height: 400rpx;
}

.body .ellipsisTwo {
    line-height: 50rpx;
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.body .school-dis {
    padding: 40rpx 40rpx 34rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.body .school-dis .des-title {
    margin-top: 32rpx;
    width: 100%;
    font-size: 28rpx;
    font-weight: 400;
    color: #5b6168;
    line-height: 50rpx;
}

.body .school-dis .school-des {
    font-weight: 700;
    display: inline-block;
    margin-right: 20rpx;
    color: #000;
}

.body .school-title {
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    margin-bottom: 16rpx;
}

.body .school-title,.body .school-title .school-des {
    display: flex;
}

.body .school-title .school-des .sc-img {
    width: 44rpx;
    height: 44rpx;
    margin-right: 16rpx;
}

.body .school-title .school-des ._span {
    font-size: 28rpx;
    font-weight: 400;
    color: #000;
}

.body .school-title .des-title {
    height: 28rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #868e99;
    line-height: 28rpx;
}

.scroll-top {
    height: 102rpx;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
}

.scroll-top .title {
    font-size: 38rpx;
    font-family: Helvetica;
    color: #000;
}

.scroll-top .nav-right {
    display: flex;
}

.scroll-top .nav-right ._span {
    height: 48rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #868e99;
    line-height: 48rpx;
}

.scroll-top .nav-right .more-icon {
    width: 48rpx;
    height: 48rpx;
}