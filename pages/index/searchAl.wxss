.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.content,.header {
    position: relative;
}

.header {
    width: 100%;
    height: 376rpx;
    padding: 52rpx 40rpx 0;
    box-sizing: border-box;
}

.header .pageTitle {
    height: 88rpx;
    font-size: 32rpx;
    font-weight: 600;
    text-align: center;
    color: #fff;
    line-height: 88rpx;
    margin-bottom: 20rpx;
}

.body,.header .pageTitle {
    width: 100%;
    font-family: PingFangSC-Semibold,PingFang SC;
}

.body {
    height: 570rpx;
    background: #fff;
    border-radius: 40rpx;
    position: absolute;
    top: 120px;
    padding: 40rpx 40rpx 0;
    box-sizing: border-box;
}

.body .title {
    height: 32rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 32rpx;
    margin: 24rpx 0;
}

.body .tag {
    width: 154rpx;
    height: 64rpx;
    border-radius: 32px;
    font-size: 28rpx;
    font-weight: 600;
    color: #595f66;
    background: #f1f3f5;
    line-height: 64rpx;
    text-align: center;
    display: inline-block;
    margin-bottom: 24rpx;
    margin-right: 16rpx;
}

.body .tag-active {
    background: #f4f8fe;
    color: #2b67ff;
}

.body .block {
    display: flex;
    flex-wrap: wrap;
}

.body .input {
    position: relative;
    margin-bottom: 54rpx;
}

.body .input .search-input {
    width: 670rpx;
    border-radius: 36rpx;
    height: 80rpx;
    background: #f1f3f5;
    opacity: .8;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.body .input .suff {
    position: absolute;
    top: 20%;
    right: 32rpx;
    background: #f1f3f5;
}

.footer {
    width: 100%;
    height: 124rpx;
    background: #fff;
    box-shadow: 0rpx 2rpx 0rpx 0rpx #f0f0f0;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    border-top: 2rpx solid #ccc;
}

.footer .btn {
    width: 574rpx;
    height: 88rpx;
    background: #2b67ff;
    border-radius: 50rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}