.cancel-btn {
    width: 100rpx;
    text-align: center;
    color: #000;
    font-weight: 600;
}

view {
    display: block;
}

.no-img-box {
    margin-top: 102rpx;
    text-align: center;
}

.no-img-box .no-img {
    width: 424rpx;
    height: 212px;
}

.no-img-box .no-img-text {
    font-size: 28rpx;
    color: #868e99;
}

.search-box {
    width: 95%;
    padding: 15rpx 2.5%;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    position: sticky;
    top: 0;
    -webkit-box-align: center;
    align-items: center;
}

.search-box .mSearch-input-box {
    width: 100%;
}

.search-box .input-box {
    width: 85%;
    flex-shrink: 1;
    -webkit-box-pack: ceLnter;
    justify-content: ceLnter;
}

.search-box .input-box,.search-box .search-btn {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.search-box .search-btn {
    width: 15%;
    margin: 0 0 0 2%;
    -webkit-box-pack: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: 28rpx;
    color: #fff;
    background-color: #2c68ff;
    border-radius: 60rpx;
}

.search-box .input-box>input {
    width: 100%;
    height: 60rpx;
    font-size: 32rpx;
    border: 0;
    border-radius: 60rpx;
    appearance: none;
    padding: 0 3%;
    margin: 0;
    background-color: #fff;
}

.placeholder-class {
    color: #9e9e9e;
}

.search-keyword {
    width: 100%;
    background-color: #f2f2f2;
}

.keyword-list-box {
    height: calc(100vh - 110rpx);
    padding-top: 10rpx;
    border-radius: 20rpx 20rpx 0 0;
    background-color: #fff;
}

.keyword-entry-tap {
    background-color: #eee;
}

.keyword-entry {
    width: 94%;
    height: 80rpx;
    margin: 0 3%;
    font-size: 30rpx;
    color: #333;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    border-bottom: 1rpx solid #e7e7e7;
}

.keyword-entry image {
    width: 60rpx;
    height: 60rpx;
}

.keyword-entry .keyword-img,.keyword-entry .keyword-text {
    height: 80rpx;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.keyword-entry .keyword-text {
    width: 90%;
}

.keyword-entry .keyword-img {
    width: 10%;
    -webkit-box-pack: center;
    justify-content: center;
}

.keyword-box {
    height: calc(100vh - 110rpx);
    border-radius: 20rpx 20rpx 0 0;
    background-color: #fff;
}

.keyword-box .keyword-block {
    padding: 10rpx 0;
}

.keyword-box .keyword-block .keyword-list-header {
    width: 94%;
    padding: 10rpx 3%;
    font-size: 27rpx;
    color: #333;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.keyword-box .keyword-block .keyword-list-header image {
    width: 40rpx;
    height: 40rpx;
}

.keyword-box .keyword-block .keyword {
    width: 94%;
    padding: 3px 3%;
    display: flex;
    flex-flow: wrap;
    -webkit-box-pack: start;
    justify-content: flex-start;
}

.keyword-box .keyword-block .hide-hot-tis,.keyword-box .keyword-block .keyword>view {
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 28rpx;
    color: #6b6b6b;
}

.keyword-box .keyword-block .keyword>view {
    -webkit-box-align: center;
    align-items: center;
    border-radius: 60rpx;
    padding: 0 20rpx;
    margin: 10rpx 20rpx 10rpx 0;
    height: 60rpx;
    background-color: #f2f2f2;
}