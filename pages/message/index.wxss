.no-img-box {
    margin: 102rpx auto 0;
}

.no-img-box .no-img {
    width: 424rpx;
    height: 212px;
}

.content {
    width: 100%;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.nav {
    margin-top: 88rpx;
}

.nav .title {
    height: 44rpx;
    font-size: 44rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 44rpx;
}

.call {
    width: 100%;
    height: 88rpx;
    background: #fff8e7;
    border-radius: 8px;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    margin: 38rpx 0 24rpx;
    padding: 0 16rpx;
}

.call .call-left {
    font-size: 28rpx;
    font-weight: 400;
    color: #b36f0a;
}

.call .call-btn-box {
    position: relative;
}

.call .call-btn-text {
    position: absolute;
    left: 20rpx;
    top: 8rpx;
    text-indent: 10rpx;
    font-size: 24rpx;
    color: #b36f0a;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.call .call-btn-text image {
    width: 32rpx;
    height: 32rpx;
}

.call .call-btn {
    width: 136rpx;
    height: 56rpx;
    background: #fdde93;
    border-radius: 28rpx;
    opacity: .4;
    border: 2rpx solid #e18f16;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.body .title {
    font-size: 28rpx;
    font-weight: 400;
    color: #9ca6b3;
    line-height: 40rpx;
}

.body .scroll-view-item {
    width: 100%;
    display: flex;
    height: 100rpx;
    padding: 34rpx 0 0;
}

.body .scroll-view-item .b-left {
    margin-right: 28rpx;
}

.body .scroll-view-item .b-left image {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
}

.body .scroll-view-item .b-right {
    position: relative;
    -webkit-box-flex: 1;
    flex: 1;
    border-bottom: 2rpx solid #dbdbdb;
}

.body .scroll-view-item .b-right .des {
    display: flex;
    height: 100%;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.body .scroll-view-item .b-right .des .name {
    font-size: 32rpx;
    font-weight: 400;
    color: #000;
    line-height: 32rpx;
    margin-bottom: 16rpx;
    font-weight: 700;
}

.body .scroll-view-item .b-right .des .mes {
    font-size: 28rpx;
    font-weight: 400;
    color: #868e99;
    line-height: 28rpx;
    width: 550rpx;
}

.body .scroll-view-item .b-right .time {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 24rpx;
    font-weight: 400;
    color: #9ca6b3;
    line-height: 24rpx;
    white-space: nowrap;
}

.body .scroll-view-item .b-right .item-msg-icon {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 0;
    padding: 4rpx;
    background-color: red;
    border-radius: 50%;
    line-height: 32rpx;
    color: #fff;
    font-size: 24rpx;
    height: 32rpx;
    min-width: 32rpx;
    text-align: center;
}