.confirm {
    width: 100%;
    height: 124rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 40rpx;
}

.confirm .btn {
    width: 574rpx;
    height: 88rpx;
    background: #2b67ff;
    border-radius: 50px;
    text-align: center;
    line-height: 88rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}

.upload-area .upload-title {
    display: flex;
    margin: 48rpx 0 32rpx;
}

.upload-area .upload-title .uload-b {
    font-size: 28rpx;
    font-weight: 400;
    color: #000;
    line-height: 28rpx;
}

.upload-area .upload-title .upload-s {
    font-size: 28rpx;
    font-weight: 400;
    color: #959aa1;
    line-height: 28rpx;
}

.upload-img {
    background: #f1f3f5;
    border-radius: 8px;
    border: 1px solid hsla(0,0%,59.2%,.5);
    font-size: 60rpx;
    text-align: center;
    line-height: 160rpx;
    color: #ccc;
}

.flex-item,.upload-img {
    width: 160rpx;
    height: 160rpx;
}

.flex-item {
    margin-right: 48rpx;
    margin-bottom: 40rpx;
}

.flex-item image {
    width: 100%;
    height: 100%;
}

.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
}

.my-icon {
    width: 48rpx;
    height: 48rpx;
}

.header {
    width: 100%;
    height: 364rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
}

.header .pagedes {
    font-size: 48rpx;
    font-weight: 600;
    color: #fff;
    line-height: 48rpx;
}

.body {
    position: absolute;
    top: 260rpx;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.body .hint {
    margin-top: 48rpx;
    padding: 20rpx;
    background: #fff8e7;
    border-radius: 8rpx;
}

.body .hint ._p {
    font-size: 24rpx;
    font-weight: 400;
    color: #b36f0a;
    line-height: 40rpx;
}

.body .confirm {
    width: 100%;
    height: 124rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 40rpx;
}

.body .confirm .btn {
    width: 574rpx;
    background: #2b67ff;
    border-radius: 50px;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}

.body .confirm .btn,.progeress .progress-text {
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
}

.progeress .progress-text {
    width: 100%;
}

.progeress .progress-text ._span {
    font-size: 32rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 32rpx;
}

.progeress .progress-text ._span:nth-child(2) {
    margin-left: 72rpx;
    display: inline-block;
    font-size: 38rpx;
    font-weight: 600;
    color: #000;
    line-height: 38rpx;
}

.progeress .progress-circle {
    font-size: 24rpx;
    font-weight: 600;
    color: #fff;
    line-height: 40rpx;
    text-align: center;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.progeress .progress-circle .cricle1,.progeress .progress-circle .cricle2 {
    width: 40rpx;
    height: 40rpx;
    background: #2b67ff;
    border-radius: 50%;
}

.flex-item {
    position: relative;
}

.flex-item .img_icon {
    position: absolute;
    top: -10%;
    right: 10%;
}