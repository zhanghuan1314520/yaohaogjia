.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
}

.my-icon {
    width: 48rpx;
    height: 48rpx;
}

.header {
    width: 100%;
    height: 364rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 0;
    position: absolute;
}

.header .pagedes {
    margin-top: 30rpx;
    font-size: 48rpx;
    font-weight: 600;
    color: #fff;
    line-height: 48rpx;
}

.body {
    position: absolute;
    top: 300rpx;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 40rpx;
    padding: 32rpx 0;
    box-sizing: border-box;
}

.body .b-padding {
    padding: 0 40rpx;
}

.body .block {
    margin-bottom: 24rpx;
}

.body .body-title {
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 80rpx;
}

.body .body-input input {
    width: 100%;
    height: 96rpx;
    background: #f1f3f5;
    border-radius: 8rpx;
    padding: 0 32rpx;
    box-sizing: border-box;
}

.body .confirm {
    width: 100%;
    height: 124rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 40rpx;
}

.body .confirm .btn {
    width: 574rpx;
    background: #2b67ff;
    border-radius: 50px;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}

.body .confirm .btn,.progeress .progress-text {
    height: 88rpx;
    text-align: center;
    line-height: 88rpx;
}

.progeress .progress-text {
    width: 100%;
}

.progeress .progress-text ._span {
    font-size: 32rpx;
    font-weight: 400;
    color: #595f66;
    line-height: 32rpx;
}

.progeress .progress-text ._span:first-of-type {
    margin-right: 72rpx;
    display: inline-block;
    font-size: 38rpx;
    font-weight: 600;
    color: #000;
    line-height: 38rpx;
}

.progeress .progress-circle {
    font-size: 24rpx;
    font-weight: 600;
    color: #fff;
    line-height: 40rpx;
    text-align: center;
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    margin-bottom: 20rpx;
}

.progeress .progress-circle .cricle1 {
    width: 40rpx;
    height: 40rpx;
    background: #2b67ff;
    border-radius: 50%;
}

.progeress .progress-circle .cricle2 {
    width: 40rpx;
    height: 40rpx;
    background: #bcc3cc;
    border-radius: 50%;
}