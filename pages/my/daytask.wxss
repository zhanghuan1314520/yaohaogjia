.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
}

.my-icon {
    width: 48rpx;
    height: 48rpx;
}

.header {
    width: 100%;
    height: 364rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 0rpx;
    left: 0;
    position: absolute;
}

.header .pagedes {
    font-size: 48rpx;
    font-weight: 600;
    color: #fff;
    line-height: 48rpx;
}

.body {
    position: absolute;
    top: 296rpx;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 40rpx;
    padding: 32rpx 0;
    box-sizing: border-box;
}

.body .day .day-block {
    width: 100%;
    height: 160rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.body .day .day-block,.body .day .day-block .block-left {
    display: flex;
}

.body .day .day-block .block-left image {
    width: 80rpx;
    height: 80rpx;
    margin-right: 24rpx;
}

.body .day .day-block .block-left .left-text {
    max-width: 460rpx;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.body .day .day-block .block-left .left-text,.body .day .day-block .block-left .left-text .block-row {
    display: flex;
}

.body .day .day-block .block-left .left-text .text-b {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 32rpx;
}

.body .day .day-block .block-left .left-text .text-red {
    font-size: 24rpx;
    font-weight: 600;
    color: #ff5637;
    line-height: 24rpx;
    padding: 8rpx 0 0 16rpx;
}

.body .day .day-block .block-left .left-text .text-ccc {
    font-size: 24rpx;
    font-weight: 400;
    color: #959aa1;
    line-height: 24rpx;
}

.body .day .day-block .block-right {
    width: 128rpx;
    height: 56rpx;
    background: #3072f6;
    border-radius: 28px;
    font-size: 24rpx;
    font-weight: 400;
    color: #fefffe;
    line-height: 56rpx;
    text-align: center;
}

.body .confirm {
    width: 100%;
    height: 124rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 40rpx;
}

.body .confirm .btn {
    width: 574rpx;
    height: 88rpx;
    background: #2b67ff;
    border-radius: 50px;
    text-align: center;
    line-height: 88rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}

.body .progress {
    width: 208rpx;
    height: 12rpx;
    margin: 16rpx 0;
    background: #f1f3f5;
    overflow: visible;
    border-radius: 6rpx;
}

.body .progress-bar {
    width: 0;
    border-radius: 6rpx;
    position: relative;
    float: left;
    height: 100%;
    text-align: center;
    background: linear-gradient(321deg,#2b67ff,#619efd);
}

.body .progress-num {
    margin-left: 8rpx;
    font-size: 22rpx;
    color: #959aa1;
}