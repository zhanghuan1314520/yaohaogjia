.content {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 90rpx;
    -webkit-box-pack: center;
    justify-content: center;
}

.center,.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
}

.center {
    margin-top: 240rpx;
}

.center image {
    width: 424rpx;
    height: 424rpx;
    display: block;
}

.center ._span {
    font-size: 28rpx;
    color: #868e99;
    line-height: 48rpx;
}

.btn,.center ._span {
    font-weight: 400;
    text-align: center;
}

.btn {
    margin-top: 80rpx;
    width: 346rpx;
    height: 88rpx;
    border-radius: 50px;
    border: 2rpx solid #b2becc;
    line-height: 88rpx;
    font-size: 30rpx;
    color: #595f66;
}