.content {
    width: 100%;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
}

.content .header {
    width: 100%;
    height: 552rpx;
}

.content .header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.content .header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 20rpx;
    position: absolute;
}

.content .header .h-content {
    margin-top: 34rpx;
    padding: 0 40rpx;
}

.content .header .h-content .h-gold {
    font-size: 72rpx;
    font-weight: 600;
    color: #fff;
    line-height: 72rpx;
    text-align: center;
}

.content .header .h-content .h-footer {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    margin-top: 20rpx;
}

.content .header .h-content .h-footer .mount {
    font-size: 32rpx;
    font-weight: 500;
    color: #fff;
    position: relative;
}

.content .header .h-content .h-footer .mount .icon {
    position: absolute;
    width: 0;
    height: 0;
    left: 70rpx;
    bottom: 20rpx;
    border: 10rpx solid transparent;
    border-top-color: #fff;
}

.content .header .h-content .h-footer .gold {
    font-weight: 400;
    color: #fff;
    font-size: 28rpx;
    margin-left: 100rpx;
}

.content .header .h-content .h-footer .gain-gold {
    width: 160rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    border: 2rpx solid #fff;
    font-weight: 400;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}

.content .body {
    position: absolute;
    top: 368rpx;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding: 40rpx;
}

.scroll-Y {
    width: 100%;
    height: calc(100vh - 540rpx);
}

.scroll-Y .block {
    width: 100%;
    height: 144rpx;
    padding-right: 20rpx;
    -webkit-box-pack: justify;
    justify-content: space-between;
    box-sizing: border-box;
    -webkit-box-align: center;
    align-items: center;
    border-bottom: 2rpx solid #ccc;
}

.scroll-Y .block,.scroll-Y .block .voc-left {
    display: flex;
}

.scroll-Y .block .voc-left {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.scroll-Y .block .voc-left .top-b {
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 32rpx;
}

.scroll-Y .block .voc-left .time-c {
    margin-top: 24rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #666;
    line-height: 24rpx;
}

.scroll-Y .block .voc-right {
    font-size: 32rpx;
    font-weight: 600;
    color: #ff5637;
    line-height: 32rpx;
}

.floorSelect {
    width: 100%;
    height: 88rpx;
    background: #fff;
    display: flex;
}

.floorSelect .footer-radio {
    font-size: 32rpx;
    font-weight: 400;
    color: #595f66;
    margin-right: 40rpx;
    text-align: center;
    -webkit-box-flex: 1;
    flex: 1;
}

.floorSelect .floor-active {
    height: 38rpx;
    font-size: 38rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: #000;
    line-height: 38rpx;
    position: relative;
}

.floorSelect .floor-active::after {
    content: "";
    position: absolute;
    bottom: -24rpx;
    left: 34%;
    width: 48rpx;
    height: 8rpx;
    background: #0940ff;
    border-radius: 6rpx;
}