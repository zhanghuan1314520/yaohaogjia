.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
    box-sizing: border-box;
}

.my-icon {
    width: 48rpx;
    height: 48rpx;
}

.signIn-openAd {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,.5);
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    align-items: center;
    z-index: 100;
}

.signIn-openAd-box {
    width: 500rpx;
    height: 300rpx;
    text-align: center;
    background-color: #fff;
    border-radius: 20rpx;
}

.signIn-openAd-tit {
    font-size: 40rpx;
    font-weight: 500;
    padding: 20rpx 0 5rpx;
}

.signIn-openAd-num {
    font-size: 50rpx;
    font-weight: 700;
    color: #ff9800;
}

.signIn-openAd-cont {
    height: 200rpx;
}

.signIn-openAd-tips {
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    border-radius: 0 0 20rpx 20rpx;
    background-color: #2b67ff;
}

.signIn-openAd .close {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 50rpx;
    border-radius: 50%;
    font-weight: 700;
    border: 4rpx solid #d8d8d8;
    color: #d8d8d8;
}

.header {
    width: 100%;
    height: 552rpx;
    padding: 0 40rpx;
    box-sizing: border-box;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 0;
    position: absolute;
}

.header .pagedes {
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    line-height: 100rpx;
}

.body {
    position: absolute;
    top: 312rpx;
    left: 2%;
    width: 96%;
    height: 554rpx;
    background: #fff;
    border-radius: 40rpx;
    padding: 108rpx 0 0;
    box-sizing: border-box;
}

.body .body-content .gold {
    display: flex;
}

.body .body-content .gold .block {
    width: 96rpx;
    text-align: end;
}

.body .body-content .gold .block .point {
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
}

.body .body-content .gold .block .s-img {
    width: 72rpx;
    height: 72rpx;
    margin-bottom: 48rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #fef8b5;
    text-align: center;
    line-height: 72rpx;
    text-shadow: 0 2rpx 2rpx #ff8902;
}

.body .body-content .gold .block .signLine {
    height: 12rpx;
    background: #e4f1ff;
    position: relative;
}

.body .body-content .gold .block .signLine .img-block {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    position: absolute;
    top: -15rpx;
    left: 30%;
}

.body .body-content .gold .block .signLine .img-block image {
    width: 44rpx;
    height: 44rpx;
}

.body .body-content .gold .block .signLine .img-block .day {
    font-size: 28rpx;
    font-weight: 400;
    color: #959aa1;
    line-height: 28rpx;
}

.body .body-content .gold .block .signLine-ok,.body .body-content .gold .block .signSelect {
    background: #3072f6;
}

.body .body-content .gold .block:first-of-type {
    -webkit-box-flex: 1;
    flex: 1;
}

.body .body-content .gold .block:first-of-type .signLine image {
    top: -15rpx;
    left: 65rpx;
}

.body .body-content .gold .block:last-of-type {
    -webkit-box-flex: 1;
    flex: 1;
    text-align: center;
}

.body .body-content .gold .block:last-of-type .signLine image {
    top: -15rpx;
    left: 40rpx;
}

.body .body-content .p-img {
    width: 188rpx;
    height: 130rpx;
    position: absolute;
    top: -40rpx;
    right: 56rpx;
}

.body .body-content .rowLine {
    height: 12rpx;
    background: #e4f1ff;
}

.body .confirm {
    height: 124rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin: 120rpx 40rpx;
}

.body .confirm .btn {
    width: 100%;
    height: 88rpx;
    background: #2b67ff;
    border-radius: 50px;
    text-align: center;
    line-height: 88rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}

.body .confirm .btn_active {
    background: #ddd;
}