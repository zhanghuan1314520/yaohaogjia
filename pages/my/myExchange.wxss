.confirm {
    width: 100%;
    height: 124rpx;
    background: #fff;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 40rpx;
}

.confirm .btn {
    width: 574rpx;
    height: 88rpx;
    background: #2b67ff;
    border-radius: 50px;
    text-align: center;
    line-height: 88rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #fff;
}

.my-top {
    padding: 0 40rpx;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.my-top,.my-top .top-left {
    display: flex;
}

.my-top .top-left {
    -webkit-box-align: center;
    align-items: center;
    margin-top: 24rpx;
}

.my-top .top-left image {
    border-radius: 50%;
    width: 128rpx;
    height: 128rpx;
    border: 3rpx solid #fff;
    margin-right: 32rpx;
}

.my-top .top-left .my-des .my-name {
    font-size: 40rpx;
    font-family: Helvetica;
    color: #fff;
    line-height: 40rpx;
}

.my-top .top-left .my-des .my-rank {
    margin-top: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
    line-height: 28rpx;
}

.content {
    width: 100%;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    position: relative;
}

.content .header {
    width: 100%;
    height: 552rpx;
}

.content .header .title {
    margin-top: 88rpx;
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 40rpx;
    text-align: center;
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
    position: relative;
}

.content .header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 20rpx;
    position: absolute;
}

.content .header .h-content {
    margin-top: 36rpx;
}

.content .header .h-content .my-h-b {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.content .header .h-content .my-h-b .h-block {
    display: inline-block;
    text-align: center;
    width: 33%;
}

.content .header .h-content .my-h-b .h-block .my-total {
    font-size: 56rpx;
    font-weight: 600;
    color: #fff;
    line-height: 56rpx;
}

.content .header .h-content .my-h-b .h-block .my-title {
    margin-top: 16rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
    line-height: 28rpx;
}

.content .body {
    position: absolute;
    top: 488rpx;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding-top: 40rpx;
}

.content .body .b-padding {
    padding: 0 40rpx;
}

.content .body .b-padding .block {
    margin-bottom: 24rpx;
}

.content .body .b-padding .block .des {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    font-weight: 400;
    line-height: 40rpx;
    font-size: 28rpx;
    margin-top: 24rpx;
}

.content .body .b-padding .block .des .text-c {
    color: #707680;
}

.content .body .b-padding .block .des .text-b {
    color: #2b67ff;
}

.content .body .body-title {
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 80rpx;
}

.content .body .body-input input {
    width: 100%;
    height: 96rpx;
    background: #f1f3f5;
    border-radius: 8rpx;
    padding: 0 32rpx;
    box-sizing: border-box;
}