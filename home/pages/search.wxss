.content,.search {
    width: 100%;
    display: flex;
}

.search {
    position: relative;
    -webkit-box-pack: center;
    justify-content: center;
}

.search .icon-search {
    position: absolute;
    top: 13rpx;
    left: 3%;
    z-index: 10;
    width: 48rpx;
    height: 48rpx;
}

.search .search-input {
    width: 670rpx;
    border-radius: 36rpx;
    height: 72rpx;
    background: #f1f3f5;
    opacity: .8;
    padding: 0 72rpx;
    box-sizing: border-box;
}