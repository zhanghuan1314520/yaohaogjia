.content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.content,.header {
    width: 100%;
    box-sizing: border-box;
}

.header {
    padding: 0 40rpx;
}

.header .title {
    margin-top: 88rpx;
    width: 100%;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: #000;
    line-height: 80rpx;
    text-align: center;
    position: relative;
}

.header .title .left {
    width: 40rpx;
    height: 40rpx;
    top: 20rpx;
    left: 0;
    position: absolute;
}

.body .body-content {
    box-sizing: border-box;
}

.body .body-content image {
    width: 100%;
}

.body .body-content .title-content {
    width: 100%;
    height: 64rpx;
    background: #fff8e7;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    justify-content: space-around;
}

.body .body-content .title-content ._p {
    font-size: 24rpx;
    font-weight: 400;
    color: #b36f0a;
    line-height: 24rpx;
}

.body .sigin {
    padding: 20rpx;
    margin: auto;
}